#!/bin/bash
#
# Begin elementary.SlackBuild

NAME=elementary
BUILD=1jp
CWD=$(pwd)

# Get functions
. ../functions
set_env

# Go to source code
cd ../../../${NAME}
prepare_src

# Configure
CFLAGS=${SCFLAGS} CXXFLAGS=${SCFLAGS} \
  ./autogen.sh \
    --prefix=/usr \
    --libdir=${LIBDIR} \
    --enable-install-examples \
    --build=${ARCH}-slackware-linux

# Install
make_install
install_doc AUTHORS COPYING INSTALL README

# Add API doc
api_doc

# Build the package
post_clean
pack_slack

# End elementary.SlackBuild
